@model IEnumerable<TeamLocal.Models.Business>

@{
    ViewData["Title"] = "Food";
}

<h1>Food</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@foreach (var item in Model)
{
    <div class="list-group">
        <div class="list-group-item">
            <div class="card">
                <div class="card-body col-lg-6">
                    <div class="card-content">
                        <b class="card-title">
                            @Html.DisplayFor(modelItem => item.BusinessName)
                        </b>
                        <p class="card-text">
                            <b>Rate:</b>
                            @Html.DisplayFor(modelItem => item.Rating)
                        </p>
                        <p>
                            <b>Address:</b>
                            @Html.DisplayFor(modelItem => item.BusinessAddress)
                        </p>
                        <p>
                            <b>Contacts:</b>
                            <i class="text-primary">@Html.DisplayFor(modelItem => item.ContactInfo)</i>
                        </p>
                        <p>
                            <b>Socials:</b>
                            @Html.DisplayFor(modelItem => item.SocialMedia)
                        </p>
                        <p>
                            <b>Overview:</b>
                            @Html.DisplayFor(modelItem => item.Overview)
                        </p>
                    </div>
                </div>

            </div>
            <div class="card-footer">
                <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#mymodal">Rate</button>
                <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#message">Message</button>
                <button type="button" onclick="location.href='@Url.Action("Index", "Product")'" class="btn btn-warning btn-lg">More..</button>
                <a asp-action="Edit" asp-route-id="@item.BusinessID" class="btn btn-warning btn-lg">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.BusinessID" class="btn btn-warning btn-lg">Delete</a>
            </div>
        </div>

            <div class="card-footer text-right">
                <button type="button" onclick="location.href='@Url.Action("Create", "Business")'" class="btn btn-warning btn-lg">More..</button>
                <a asp-action="Edit" asp-route-id="@item.BusinessID">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.BusinessID">Delete</a>
            </div>

        </div>

    </div>
}